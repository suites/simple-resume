{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "indent": {
      "options": [
        "spaces",
        2
      ]
    },
    "interface-name": {
      "options": [
        "never-prefix"
      ]
    },
    "max-classes-per-file": {
      "options": [
        10
      ]
    },
    "max-line-length": {
      "options": [
        150
      ],
      "severity": "warning"
    },
    "member-access": false,
    "member-ordering": false,
    "no-console": false,
    "no-empty-interface": false,
    "no-reference": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "quotemark": {
      "options": [
        "single",
        "jsx-single",
        "avoid-escape"
      ]
    },
    "trailing-comma": {
      "options": {
        "esSpecCompliant": true,
        "multiline": "always",
        "singleline": "never"
      }
    },
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "allow-snake-case"
      ]
    }
  },
  "rulesDirectory": []
}